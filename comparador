#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int n1,n2,n3;
	cout<<"ingrese primer valor: ";
	cin>> n1;
	cout<<"ingrese segundo valor: ";
	cin>> n2;
	cout<<"ingrese tercer valor: ";
	cin>> n3;

	if(n1>n2)
		if(n1>3)
			cout<< "el mayor es: "<< n1;
		else
			cout<<"el mayor es: "<< n3;
	else
		if(n2>n3)
			cout<<"el mayor es: "<< n2;
		else
			cout<<"el mayor es: "<< n3;
	getch();
}
