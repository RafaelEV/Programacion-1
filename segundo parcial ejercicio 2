// serie.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	float x;
	int e,n,s,a;
	cout<<" ingrese la cantidad de terminos a sumar: ";
	cin>>n;
	cout<<" ingrese x: ";
	cin>>x;
	s=0;
	a=-1;
	for(e=1;e<=n;e++)
	{
		s=s+a*pow(x,e);
	    a=a*-1;
	}
	cout<<" el resultado es: "<<s;
	getch();
}
